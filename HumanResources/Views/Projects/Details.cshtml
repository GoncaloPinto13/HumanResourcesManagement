

@* SISTEMA DE ABAS (TABS) *@
@model HumanResources.Models.Project

@{
    ViewData["Title"] = "Project Details";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Projecto: @Model.ProjectName</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Voltar à lista</a>
    </div>
</div>

@* SISTEMA DE ABAS (TABS) *@
<div class="card">
    <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs" id="projectTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="details-tab" data-bs-toggle="tab" data-bs-target="#details" type="button" role="tab" aria-controls="details" aria-selected="true">Details</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="contracts-tab" data-bs-toggle="tab" data-bs-target="#contracts" type="button" role="tab" aria-controls="contracts" aria-selected="false">Associated Contracts</button>
            </li>
        </ul>
    </div>
    <div class="card-body">
        <div class="tab-content" id="projectTabContent">

            @* ======================================================================== *@
            @* CONTEÚDO DA ABA DE DETALHES - ESTA É A SECÇÃO QUE FOI MELHORADA *@
            @* ======================================================================== *@
            <div class="tab-pane fade show active" id="details" role="tabpanel" aria-labelledby="details-tab">
                
                @* Descrição do Projeto - Ocupa a linha toda para mais espaço *@
                <div class="row mb-3">
                    <div class="col-12">
                        <label class="fw-bold text-muted">@Html.DisplayNameFor(model => model.Description)</label>
                        <p class="fs-5">@Html.DisplayFor(model => model.Description)</p>
                    </div>
                </div>

                <hr />

                @* Outros detalhes organizados em duas colunas *@
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="fw-bold text-muted">@Html.DisplayNameFor(model => model.Client)</label>
                        <p>@Html.DisplayFor(model => model.Client.CompanyName)</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="fw-bold text-muted">@Html.DisplayNameFor(model => model.ProjectStatus)</label>
                        <p>@Html.DisplayFor(model => model.ProjectStatus)</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="fw-bold text-muted">@Html.DisplayNameFor(model => model.StartDate)</label>
                        <p>@Model.StartDate.ToShortDateString()</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="fw-bold text-muted">@Html.DisplayNameFor(model => model.DueDate)</label>
                        <p>@Model.DueDate.ToShortDateString()</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="fw-bold text-muted">@Html.DisplayNameFor(model => model.Budget)</label>
                        <p class="fs-5 fw-bold text-success">@Model.Budget.ToString("C")</p>
                    </div>
                </div>

            </div>

            @* CONTEÚDO DA ABA DE CONTRATOS *@
            <div class="tab-pane fade" id="contracts" role="tabpanel" aria-labelledby="contracts-tab">
                <div class="d-flex justify-content-end mb-3">
                    @* Este botão leva-nos para a criação de um contrato, passando o ID do projeto atual *@
                    <a asp-controller="Contracts" asp-action="Create" asp-route-projectId="@Model.Id" class="btn btn-success">
                        Create New Contract
                    </a>
                </div>

                @if (Model.Contracts.Any())
                {
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Service Description</th>
                                <th>Start Date</th>
                                <th>Value</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var contract in Model.Contracts)
                            {
                                <tr>
                                    <td>@contract.ServiceDescription</td>
                                    <td>@contract.StartDate.ToShortDateString()</td>
                                    <td>@contract.Value.ToString("C")</td>
                                    <td>
                                        <a asp-controller="Contracts" asp-action="Details" asp-route-id="@contract.Id" class="btn btn-sm btn-info">Details</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info" role="alert">
                        There are no contracts associated with this project yet.
                    </div>
                }
            </div>
        </div>
    </div>
</div>