@model HumanResources.Models.Contract

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
}

@{
    ViewData["Title"] = "Contract Details";
}

<div class="row">
    @* Coluna para os Detalhes do Contrato *@
    <div class="col-md-12">
        <div class="card shadow-sm">
            <div class="card-header">
                <h3>Detalhes do Contrato 📄</h3>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Nome do Projeto</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Project.ProjectName)</dd>

                    <dt class="col-sm-4">Descrição do Serviço</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.ServiceDescription)</dd>

                    <dt class="col-sm-4">Cliente</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Project.Client.CompanyName)</dd>

                    <dt class="col-sm-4">Data de Início Prevista</dt>
                    <dd class="col-sm-8">@Model.StartDate.ToShortDateString()</dd>

                    <dt class="col-sm-4">Data de Fim Prevista</dt>
                    <dd class="col-sm-8">@Model.ExpirationDate.ToShortDateString()</dd>

                    <dt class="col-sm-4">Duração do Contrato</dt>
                    <dd class="col-sm-8">@Model.DurationInDays Dias</dd>

                    <dt class="col-sm-4">Valor Orçado</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Value) €</dd>

                    <dt class="col-sm-4">Aceite do Termo de Condições Contratuais</dt>
                    <dd class="col-sm-8">@(Model.TermsAndConditions ? "Aceito" : "Não Aceito")</dd>

                    <dt class="col-sm-4">Em Espera?</dt>
                    <dd class="col-sm-8">@((Model.IsOnStandby) ? "Sim" : "Não")</dd>

                </dl>
            </div>
        </div>
    </div>
</div>

@* Coluna para a Lista de Funcionários Associados *@
<div class="d-flex justify-content-between align-items-center mt-3">
    <div class="col-md-7">
        <div class="card shadow-sm">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">Funcionários Associados ao Contrato 🧑‍💻</h3>
                    @* Altere o botão para abrir o modal *@
                    <a href="#" class="btn btn-success" title="Associar novo funcionário" data-bs-toggle="modal" data-bs-target="#addEmployeeModal">
                        <i class="bi bi-person-fill-add"></i>
                    </a>
                </div>
            </div>
            <div class="card-body">
                @if (Model.EmployeeContracts != null && Model.EmployeeContracts.Any())
                {
                    <ul class="list-group">
                        @foreach (var employeeContract in Model.EmployeeContracts)
                        {
                            <li class="list-group-item">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>@employeeContract.Employee.Name</strong>
                                        <small class="d-block text-muted">@employeeContract.Employee.Position</small>
                                    </div>
                                    <span class="badge bg-primary rounded-pill">@employeeContract.DurationInDays days</span>
                                    <form asp-action="RemoveEmployeeContract" method="post" style="display:inline;">
                                        <input type="hidden" name="employeeContractId" value="@employeeContract.EmployeeContractId" />
                                        <input type="hidden" name="contractId" value="@Model.Id" />
                                        <button type="submit" class="btn btn-danger" title="Desassociar funcionário" onclick="return confirm('Tem certeza que deseja desassociar este funcionário?');">
                                            <i class="bi bi-person-dash-fill"></i>
                                        </button>
                                    </form>
                                </div>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted">No employees assigned to this contract.</p>
                }
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-header">
                <div >
                    <h3 class="mb-0">Ações ⚙️</h3>
                </div>
            </div>
            <div class="card-body">
                <div class="row g-2">
                    <div class="col-6">
                        <a asp-action="InitServices" asp-route-id="@Model.Id" class="btn btn-primary w-100">Iniciar Serviços</a>
                    </div>
                    <div class="col-6">
                        <a asp-action="PauseServices" asp-route-id="@Model.Id" class="btn btn-warning w-100">Pausar Serviços</a>
                    </div>
                    <div class="col-6">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary w-100">Editar Contrato</a>
                    </div>
                    <div class="col-6">
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger w-100">Excluir Contrato</a>
                    </div>
                    <div class="row mt-4">
                        <div class="col-12">
                            <button type="button" class="btn btn-warning w-100" data-bs-toggle="modal" data-bs-target="#finishContractModal">
                                Finalizar Contrato
                            </button>
                        </div>
                    </div>
                   @*  <div class="col-12">
                        <button type="button" class="btn btn-success w-100" data-bs-toggle="modal" data-bs-target="#finishContractModal">
                            Finalizar Contrato
                        </button>
                    </div> *@
                </div>
            </div>
        </div>
    </div>
</div>

