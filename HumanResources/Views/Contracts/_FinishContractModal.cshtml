@model int

<div class="modal fade" id="finishContractModal" tabindex="-1" aria-labelledby="finishContractModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="FinishContract" asp-controller="Contracts" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="finishContractModalLabel">Finalizar Contrato</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="id" value="@Model" />

                    <div class="mb-3">
                        <label for="realEndDate" class="form-label">Data de Fim Real</label>
                        <input type="date" class="form-control" id="realEndDate" name="realEndDate" required />
                    </div>

                    <div class="mb-3">
                        <label for="realValue" class="form-label">Valor Final (EUR)</label>
                        <input type="number" step="0.01" class="form-control" id="realValue" name="realValue" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-success">Finalizar Contrato</button>
                </div>
            </form>
        </div>
    </div>
</div>