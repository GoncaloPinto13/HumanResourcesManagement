@model IEnumerable<HumanResources.Models.EmployeeContract>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DurationInDays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contract)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DurationInDays)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contract.ServiceDescription)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EmployeeContractId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.EmployeeContractId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.EmployeeContractId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>